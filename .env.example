# Synology Photos Configuration
# Copy this file to .env and fill in your actual values
# Environment variables override config.js settings

# ====================
# Connection Settings
# ====================

# Synology NAS URL (REQUIRED)
SYNOLOGY_URL=http://192.168.1.100:5000

# Authentication (Option 1: Username/Password)
SYNOLOGY_ACCOUNT=your-username
SYNOLOGY_PASSWORD=your-password

# Authentication (Option 2: Shared Album Token)
# Use this instead of username/password for shared albums
# SYNOLOGY_SHARE_TOKEN=your-share-token-here

# ====================
# Content Selection
# ====================

# Specific album name (leave empty for all photos)
SYNOLOGY_ALBUM_NAME=MagicMirror

# Filter by tags (comma-separated list)
# SYNOLOGY_TAG_NAMES=Vacation,Family,Favorites

# Maximum number of photos to fetch
SYNOLOGY_MAX_PHOTOS=1000

# ====================
# Slideshow Settings
# ====================

# Time between image transitions (milliseconds)
SLIDESHOW_SPEED=10000

# How often to refresh the image list from Synology (milliseconds)
REFRESH_IMAGE_LIST_INTERVAL=3600000

# Randomize image order (true/false)
RANDOMIZE_IMAGE_ORDER=false

# Show all images before repeating (true/false)
SHOW_ALL_IMAGES_BEFORE_RESTART=false

# ====================
# Image Processing
# ====================

# Resize images to save memory (true/false)
RESIZE_IMAGES=false

# Maximum width for resized images
MAX_WIDTH=1920

# Maximum height for resized images
MAX_HEIGHT=1080

# ====================
# Cache Settings
# ====================

# Enable local image caching (true/false)
ENABLE_IMAGE_CACHE=true

# Maximum cache size in MB
IMAGE_CACHE_MAX_SIZE=500

# Number of images to preload in background
IMAGE_CACHE_PRELOAD_COUNT=10

# Delay between preloading images in milliseconds
# Higher values reduce CPU load on low-power devices
IMAGE_CACHE_PRELOAD_DELAY=500

# ====================
# Memory Management
# ====================

# Enable automatic memory monitoring (true/false)
ENABLE_MEMORY_MONITOR=true

# How often to check memory usage (milliseconds)
MEMORY_MONITOR_INTERVAL=60000

# Memory usage threshold to trigger cleanup (0.0 to 1.0)
# 0.85 = cleanup when 85% memory is used
MEMORY_THRESHOLD=0.85
